{
  "type": "object",
  "properties": {
    "entities": {
      "type": "array",
      "description": "List of extracted entities from the text",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "The entity text"
          },
          "type": {
            "type": "string",
            "enum": [
              "person",
              "organization",
              "location",
              "date",
              "product",
              "other"
            ],
            "description": "Type of entity"
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Confidence score for this entity (0-1)"
          }
        },
        "required": ["name", "type"]
      }
    }
  },
  "required": ["entities"],
  "additionalProperties": false
}
